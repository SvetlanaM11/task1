#task1
from turtle import*
up()
goto(-200,100)
down()
color("blue")
shape("turtle")
pensize(10)
for x in range(3):
    forward(100)
    left(120)
up()
goto(200,100)
down()
color("yellow")
for x in range(3):
    forward(100)
    left(120)
up()
goto(-200,-100)
down()
color("red")
begin_fill()
for x in range(3):
    forward(100)
    left(120)
end_fill()
