alphabet = "ABCDEFGHIJKLMNOPQRSTUVWXYZABCDEFGHIJKLMNOPQRSTUVWXYZ"
string = input("Please, enter a message to encrypt: ")
string = string.upper()
key = int(input("Please, enter a key from 1 to 25 "))
encryptedString = ""
for letter in string:
    index = alphabet.find(letter)
    newIndex = index + key
    if letter in alphabet:
        encryptedString = encryptedString + alphabet[newIndex]
    else:
        encryptedString = encryptedString + letter
print("Your encrypted message is", encryptedString)
